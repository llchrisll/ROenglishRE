function GetRealWeaponId(weaponId)
	if weaponId == nil then
		return 0
	end
	local id = Expansion_Weapon_IDs[weaponId]
	if id ~= nil then
		return id
	end
	if Expansion_Weapon_IDs_CLS ~= nil then
		local id = Expansion_Weapon_IDs_CLS[weaponId]
		if id ~= nil then
			return id
		end
	end
	return weaponId
end

