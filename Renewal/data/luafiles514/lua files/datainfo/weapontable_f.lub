function IsItemUsingArrow ( type )
	for k, val in ipairs( BowTypeList ) do
		if ( type == val ) then
			return true
		end
	end
	if BowTypeList_CLS ~= nil then
		for k, val in ipairs( BowTypeList_CLS ) do
			if ( type == val ) then
				return true
			end
		end
	end
	return false
end
