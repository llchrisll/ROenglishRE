function ReqWeaponName(index)
	if WeaponNameTable == nil then
		return ""
	end
	local NameMsg = WeaponNameTable[index]
	if NameMsg ~= nil then
		return NameMsg
	end
	if WeaponNameTable_CLS ~= nil then
		local NameMsg = WeaponNameTable_CLS[index]
		if NameMsg ~= nil then
			return NameMsg
		end
	end
	return ""
end

